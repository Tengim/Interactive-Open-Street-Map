<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="AxxonSoft_OSM_.AreaEditDialog"
        d:DesignWidth="300" d:DesignHeight="340"
        Width="300" Height="340"
        CanResize="False"
        Title="AreaEditDialog"
        x:CompileBindings="False">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Название области:"/>
        <TextBox Text="{Binding Name}"/>

        <StackPanel Grid.Column="0" Margin="0,10,0,0">
            <TextBlock Text="Цвет области:"/>
            <ColorPicker Color="{Binding FillColor, Mode=TwoWay}" 
                         Width="100" Height="50" Margin="5,0"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Margin="0,10,0,0">
            <TextBlock Text="Цвет Обводки:"/>
            <ColorPicker Color="{Binding BorderColor, Mode=TwoWay}" 
                         Width="100" Height="50" Margin="5,0"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Classes="btn-cancel"
                    Content="Отмена" 
                    Click="OnCancelClicked"
                    MinWidth="80"/>
            <Button Classes="btn-success"
                    Content="Сохранить" 
                    Click="OnSaveClicked"
                    MinWidth="80"/>
        </StackPanel>
    </StackPanel>
</Window>